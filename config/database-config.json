{
  "connection": {
    "type": "distributed",
    "hosts": [
      "prod-db.example.com",
      "node1.example.com",
      "node2.example.com",
      "node3.example.com"
    ],
    "port": 5432,
    "database": "devops_productiocdn",
    "username": "prod_admin",
    "ssl_mode": "require",
    "pool_size": 20,
    "timeout": 30,
    "connection_pooling": "pgbouncer",
    "read_replicas": 5
  },
  "backup": {
    "enabled": true,
    "strategy": "continuous",
    "schedule": "0 2 * * *",
    "retention_days": 30,
    "location": "/backups/database",
    "encryption": true,
    "geo_redundancy": true
  },
  "replication": {
    "enabled": true,
    "replicas": 2,
    "sync_mode": "synchronous",
    "multi_region": true,
    "regions": ["us-east", "eu-west", "ap-south"]
  },
  "development": {
    "seed_data": true,
    "reset_on_restart": true,
    "debug_queries": true
  },
  "ai_optimization": {
    "query_optimization": true,
    "index_suggestions": true,
    "auto_vacuum_ml": true
  },
  "monitoring": {
    "slow_query_threshold": 100,
    "alert_on_anomaly": true,
    "metrics_export": "prometheus"
  }
}
